<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_light">

    <!-- Very Subtle Background Text - Part of Background Color -->
    <TextView
        android:id="@+id/background_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="પદ્મભૂષણ શ્રી સ્વામી સચ્ચિદાનંદ પરમહંસ"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#EEEEEE"
        android:gravity="center"
        android:rotation="-18"
        android:padding="40dp"
        android:maxLines="3"
        android:lineSpacingExtra="12dp"
        android:alpha="0.15"
        android:clickable="false"
        android:focusable="false" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Swamiji Photo and Information -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- Circular Photo -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="75dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:id="@+id/swamiji_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:contentDescription="પદ્મભૂષણ શ્રી સ્વામી સચ્ચિદાનંદ" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Name Title -->
                <TextView
                    android:id="@+id/swamiji_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="પદ્મભૂષણ શ્રી સ્વામી સચ્ચિદાનંદ"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="?attr/text_primary"
                    android:layout_marginBottom="16dp"
                    android:gravity="center" />

                <!-- Information -->
                <TextView
                    android:id="@+id/about_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="?attr/text_secondary"
                    android:lineSpacingExtra="6dp"
                    android:gravity="start" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Ashrams Section Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="આશ્રમો"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/text_primary"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <!-- Ashram 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ભક્તિનિકેતન આશ્રમ"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ashram1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Ashram 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="સાધનાશ્રમ"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ashram2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Ashram 3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="વૃદ્ધાશ્રમ"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ashram3_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>

</FrameLayout>

