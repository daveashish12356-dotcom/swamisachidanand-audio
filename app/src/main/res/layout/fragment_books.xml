<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_light">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Search Bar at Top -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/search_bar_margin_h"
        android:layout_marginEnd="@dimen/search_bar_margin_h"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/search_bar_radius"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="1dp"
        app:strokeColor="#E0E0E0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/search_bar_padding_h"
            android:paddingEnd="@dimen/search_bar_padding_h"
            android:paddingTop="@dimen/search_bar_padding_v"
            android:paddingBottom="@dimen/search_bar_padding_v">

            <ImageView
                android:layout_width="@dimen/search_icon_size"
                android:layout_height="@dimen/search_icon_size"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#757575"
                android:layout_marginEnd="12dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="પુસ્તકો શોધો"
                android:textSize="@dimen/search_text_size"
                android:textColorHint="#9E9E9E"
                android:textColor="#212121"
                android:background="@android:color/transparent"
                android:inputType="text|textAutoComplete|textAutoCorrect"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:singleLine="true"
                android:textCursorDrawable="@null" />

            <ImageView
                android:id="@+id/clear_search"
                android:layout_width="@dimen/search_icon_size"
                android:layout_height="@dimen/search_icon_size"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#757575"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/mic_button"
                android:layout_width="@dimen/search_icon_size"
                android:layout_height="@dimen/search_icon_size"
                android:src="@android:drawable/ic_btn_speak_now"
                app:tint="#4285F4"
                android:layout_marginStart="12dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Voice search" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Books RecyclerView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Eye Protection Overlay (Yellow/Warm Filter) -->
        <View
            android:id="@+id/eye_protection_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60FFD700"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/books_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/spacing_normal"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_medium"
            android:clipToPadding="false"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/empty_icon_size"
                android:layout_height="@dimen/empty_icon_size"
                android:src="@android:drawable/ic_menu_view"
                app:tint="@color/bhagva"
                android:alpha="0.6"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No books found"
                android:textSize="@dimen/empty_title_size"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/empty_text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading books..."
                android:textSize="@dimen/empty_message_size"
                android:textColor="#757575" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

</FrameLayout>
